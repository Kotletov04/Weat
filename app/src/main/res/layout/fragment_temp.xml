<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.TempFragment"
    android:background="@drawable/background_day_temp"
    android:id="@+id/temp_page"
    android:padding="15dp">




    <LinearLayout
        android:id="@+id/graph_weather"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:background="@drawable/back_temp_graph"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:padding="15dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_gravity="right"
            android:background="#5AACEC"
            >


            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:src="@drawable/snow_two_page" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/pine_tree" />


            <ImageView
                android:id="@+id/razd"
                android:layout_width="150dp"
                android:layout_height="1dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="50dp"
                android:background="@color/white" />


            <ImageView
                android:id="@+id/weather_one"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignRight="@id/temp_one"
                android:layout_alignBottom="@id/temp_one"
                android:layout_marginEnd="38dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/snow_two_page" />

            <ImageView
                android:id="@+id/weather_two"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignRight="@id/temp_two"
                android:layout_alignBottom="@id/temp_two"
                android:layout_marginEnd="38dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/cloud_03" />

            <TextView
                android:id="@+id/one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/two"
                android:layout_marginEnd="30dp"
                android:layout_toStartOf="@id/two"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/name_day"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/razd"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/name_evening"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/temp_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/one"
                android:layout_alignRight="@id/one"
                android:layout_marginTop="25dp"
                android:fontFamily="sans-serif-thin"
                android:text="-23°"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/temp_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/two"
                android:layout_alignRight="@id/two"
                android:layout_marginTop="25dp"
                android:fontFamily="sans-serif-thin"
                android:text="-29°"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/temp_zero"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="80dp"
                android:textAlignment="textEnd"
                android:fontFamily="sans-serif-thin"
                android:text="-13°"
                android:textColor="@color/white"
                android:textSize="40dp" />

            <TextView
                android:id="@+id/zero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/temp_zero"
                android:layout_marginStart="80dp"
                android:layout_marginBottom="10dp"
                android:layout_alignLeft="@id/temp_zero"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/name_morning"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/razd"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="sans-serif-black"
                android:text="19 декабря"
                android:textColor="@color/white"
                android:textSize="25dp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_gravity="right"
            android:background="#5AACEC">


            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:src="@drawable/snow_two_page" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/pine_tree" />


            <ImageView
                android:id="@+id/razd_el_two"
                android:layout_width="150dp"
                android:layout_height="1dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="50dp"
                android:background="@color/white" />


            <ImageView
                android:id="@+id/weather_one_el_two"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignRight="@id/temp_one_el_two"
                android:layout_alignBottom="@id/temp_one_el_two"
                android:layout_marginEnd="38dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/snow_two_page" />

            <ImageView
                android:id="@+id/weather_two_el_two"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignRight="@id/temp_two_el_two"
                android:layout_alignBottom="@id/temp_two_el_two"
                android:layout_marginEnd="38dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/cloud_03" />

            <TextView
                android:id="@+id/one_el_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/two_el_two"
                android:layout_marginEnd="30dp"
                android:layout_toStartOf="@id/two_el_two"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/name_day"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/two_el_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/razd_el_two"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/name_evening"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/temp_one_el_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/one_el_two"
                android:layout_alignRight="@id/one_el_two"
                android:layout_marginTop="25dp"
                android:fontFamily="sans-serif-thin"
                android:text="-23°"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/temp_two_el_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/two_el_two"
                android:layout_alignRight="@id/two_el_two"
                android:layout_marginTop="25dp"
                android:fontFamily="sans-serif-thin"
                android:text="-29°"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/temp_zero_el_two"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="80dp"
                android:textAlignment="textEnd"
                android:fontFamily="sans-serif-thin"
                android:text="-14°"
                android:textColor="@color/white"
                android:textSize="40dp" />

            <TextView
                android:id="@+id/zero_el_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/temp_zero_el_two"
                android:layout_marginStart="80dp"
                android:layout_marginBottom="10dp"
                android:layout_alignLeft="@id/temp_zero_el_two"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/name_morning"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/date_el_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/razd_el_two"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="sans-serif-black"
                android:text="19 декабря"
                android:textColor="@color/white"
                android:textSize="25dp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_gravity="right"
            android:background="#5AACEC">


            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:src="@drawable/snow_two_page" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/pine_tree" />


            <ImageView
                android:id="@+id/razd_el_three"
                android:layout_width="150dp"
                android:layout_height="1dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="50dp"
                android:background="@color/white" />


            <ImageView
                android:id="@+id/weather_one_el_three"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignRight="@id/temp_one_el_three"
                android:layout_alignBottom="@id/temp_one_el_three"
                android:layout_marginEnd="38dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/snow_two_page" />

            <ImageView
                android:id="@+id/weather_two_el_three"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignRight="@id/temp_two_el_three"
                android:layout_alignBottom="@id/temp_two_el_three"
                android:layout_marginEnd="38dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/cloud_03" />

            <TextView
                android:id="@+id/one_el_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/two_el_three"
                android:layout_marginEnd="30dp"
                android:layout_toStartOf="@id/two_el_three"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/name_day"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/two_el_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/razd_el_three"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/name_evening"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/temp_one_el_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/one_el_three"
                android:layout_alignRight="@id/one_el_three"
                android:layout_marginTop="25dp"
                android:fontFamily="sans-serif-thin"
                android:text="-23°"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/temp_two_el_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/two_el_three"
                android:layout_alignRight="@id/two_el_three"
                android:layout_marginTop="25dp"
                android:fontFamily="sans-serif-thin"
                android:text="-29°"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/temp_zero_el_three"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="80dp"
                android:textAlignment="textEnd"
                android:fontFamily="sans-serif-thin"
                android:text="-13°"
                android:textColor="@color/white"
                android:textSize="40dp" />

            <TextView
                android:id="@+id/zero_el_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/temp_zero_el_three"
                android:layout_marginStart="80dp"
                android:layout_marginBottom="10dp"
                android:layout_alignLeft="@id/temp_zero_el_three"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/name_morning"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/date_el_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/razd_el_three"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="sans-serif-black"
                android:text="19 декабря"
                android:textColor="@color/white"
                android:textSize="25dp" />


        </RelativeLayout>


    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        app:layout_constraintTop_toBottomOf="@id/graph_weather"
        android:layout_marginTop="15dp"
        android:background="@drawable/back_co">



        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <TableRow>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/sun_time"
                    android:layout_marginTop="100dp"
                    android:layout_marginRight="5dp"
                    />

                <TextView
                    android:fontFamily="sans-serif-black"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5:30"
                    android:textSize="15dp"
                    android:layout_alignBottom="@id/uga"
                    android:layout_marginTop="100dp"
                    />

                <ImageView
                    android:id="@+id/uga"
                    android:layout_width="130dp"
                    android:layout_height="170dp"
                    android:rotation="45"
                    android:src="@drawable/white_duga" />

                <TextView
                    android:layout_marginTop="100dp"
                    android:fontFamily="sans-serif-black"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20:30"
                    android:textSize="15dp"
                    android:layout_alignBottom="@id/uga"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/moon_time"
                    android:layout_marginTop="100dp"
                    android:layout_marginLeft="5dp"
                    />


            </TableRow>



        </TableLayout>


        <ImageView
            android:layout_width="250dp"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@color/white"/>








    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>